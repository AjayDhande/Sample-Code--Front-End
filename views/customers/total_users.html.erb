<div class="container container-fix">
  <!--========================   Upload  Start   ======================-->
  <%#=render "header_admin"%>
  <%=render "dashboard_tabs"%>

  <div class="row">
    <div class="col-sm-12">
      <h4 class="heading-title text-left">Total Users: <%= @users.count %></h4>
      <div class="row">
        <div class="col-xs-12">
          <div class="table-responsive">
          <div id="fixed_div" class="fixed_div">
                     <img src="<%= asset_path 'r-arrow.png'%>" class="right_arrow"/> 
                   </div>
            <%if current_user.is_subdomain_admin? %>
              <table class="table table-bordered" style="width:100%;" >
                <thead>
                  <tr bgcolor="#31708f">
                    <th><font color="white">Name</font></th>
                    <th><font color="white">Username</font></th>
                    <th><font color="white">Email</font></th>
                    <th><font color="white">User Type</font></th>
                  </tr>
                </thead>
                <tbody class="odd" id="mytable">
                  <% @all_users.each do |user| %>  
                    <tr>
                      <td><%= user.name.titleize %></td>
                      <td><%= user.username %></td>
                      <td><%= user.email %></td>
                      <td><%= user.user_role.role.sub('_',' ').titleize %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            <%else%>
              <table class="table table-bordered" style="width:100%;" >
                <thead>
                  <%#if %>
                  <tr>
                    <th>Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>User Type</th>
                  </tr>
                </thead>
                <tbody id="mytable">
                  <% @all_users.each do |user| %>  
                  <tr>
                    <td><%= user.name.titleize %></td>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td><%= user.user_role.role.sub('_',' ').titleize %></td>
                  </tr>
                <% end %>
            </tbody>
          </table>
         <%end%>
      </div>
  </div>
</div>
    <%= will_paginate @all_users %>
    </div>
</div>    
    <!--========================   Upload   End  ======================-->
</div>
<%=javascript_include_tag 'bootstrap-hover-dropdown.js', 'my_account.js'%>

<%= stylesheet_link_tag "my_account.css","tab.css" %>
<script>
  $(".odd").find("tr:odd").css("background-color","#FFF5EB");
  $(".odd").find("tr:even").css("background-color","#ffffff");
</script>
<script type="text/javascript">
    if(WURFL.form_factor == "Smartphone")
    {
       $("#form7").removeClass("chosen-select").addClass("form-control").css({'width' : 'auto'})
      }
      else{
         $("#fixed_div").hide();
      }
</script>
