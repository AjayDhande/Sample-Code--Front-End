<div class="modal fade container-fix" id="EditPlan<%=plan.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content well">
            <div class="modal-header">
                <button type="button" class="close" 
               data-dismiss="modal" aria-hidden="true">
                  &times;
            </button>
            <h4 class="modal-title text-primary" id="myModalLabel">
               Edit Plan
            </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                  <form action="<%= update_plan_path %>" class="form-horizontal edit_plan_form" method= "post">
                    <div class="form-group">
                      <label>Plan Name</label>
                      <input name="plan_name" type="text" class="form-control" onkeyup="removeError(this);" value="<%= plan.plan_name.titleize%>">         
                    </div>
                    <input name="id" type="hidden" value="<%=plan.id%>"/>
                    <input name="authenticity_token" type="hidden" value="<%=form_authenticity_token %>"/>
                    <div class="form-group">
                      <label class ="required">Amount</label>
                      <input name="plan_amount" type="text" class="form-control" onkeyup="removeError(this);" value = "<%= number_with_precision(plan.plan_amount, precision:2)%>">
                    </div>
                    <div class="form-group">
                      <label>Plan Description</label>
                      <!-- <p><%= plan.plan_description%></p> -->
                      <input name="plan_description" type="text" class="form-control" value="<%= plan.plan_description%>" ></input>
                    </div>
                    <input type="submit" class="btn btn-info" value="Save Info">
                   </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-info">Cancel</button>
            </div>
        </div>
    </div>
</div>